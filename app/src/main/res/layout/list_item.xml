<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_list1"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_thirteen">

    <ImageView
        android:id="@+id/img_of_list"
        android:layout_width="@dimen/dimen_eleven"
        android:layout_height="@dimen/dimen_eleven"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/aedil" />

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_ten"
        android:layout_marginStart="@dimen/dimen_ten"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_five"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            tools:ignore="NestedWeights"
            tools:text="@string/item_name" />

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_five"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="top"
            android:singleLine="true"
            tools:text="@string/details" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dimen_twelve"
        android:layout_height="@dimen/dimen_twelve"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dimen_eight"
        android:layout_marginLeft="@dimen/dimen_seven"
        android:layout_marginRight="@dimen/dimen_eight"
        android:layout_marginStart="@dimen/dimen_seven"
        android:backgroundTint="@color/backTint"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/next" />
</LinearLayout>